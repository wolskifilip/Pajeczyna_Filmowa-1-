@model Pajeczyna_Filmowa.Models.Movie

@{
    ViewData["Title"] = "Random Movie";
}

<h2 style="text-align:center">Random Movie</h2>

<div id="randomMovieContainer" style="margin-top: 20px;">
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>
            <a href="@Url.Action("Index", "MovieDescription", new { id = Model.Id })" class="btn btn-primary">Go to Movie Description</a>
            <a href="@Url.Action("Index", "MovieReview", new { id = Model.Id })" class="btn btn-secondary" style="margin-left: 10px;">Go to Movie Review</a>
        </div>
    </div>
</div>
